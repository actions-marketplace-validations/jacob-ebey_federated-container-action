{
  "name": "federated-container-action",
  "version": "1.0.0",
  "main": "dist/action.js",
  "license": "MIT",
  "scripts": {
    "build": "run-p typecheck build:prod",
    "build:prod": "node ./build.js",
    "format": "prettier --write './src/**/*.{ts}'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "webpack": "^5.27.0"
  },
  "devDependencies": {
    "@actions/core": "1.2.6",
    "@types/node": "14.14.35",
    "child-process-promise": "^2.2.1",
    "esbuild": "0.9.5",
    "esbuild-node-externals": "^1.0.3",
    "husky": "5.1.3",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "typescript": "4.2.3",
    "webpack-merge": "^5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "foo/**/*.ts": "prettier --write"
  }
}
